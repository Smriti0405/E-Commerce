<% layout('layout/boilerplate') -%>



    <section>
        <h1 class="display-6 mb-3">My Cart</h1>
        <div class="row">
            <div class="col-lg-8">
                <% for(let item of user.cart){%>
                    <div class="card mb-3" style="width: 400px;" >
                        <div class="row g-0">
                          <div class="col-md-6">
                            <img src="<%= item.img %>" class="img-fluid rounded card-img-top img-thumbnail" alt="..." style="width: 15rem; height: 10rem;">
                          </div>
                          <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <div class="card-body">
                              <h4 class="card-title"><%= item.name %></h4>
                              <h5 class="card-text">Rs. <%= item.price %></h5>
                            </div>
                          </div>
                        </div>
                      </div>
                <% } %>
            </div>
        <div class="col-lg-4">
            <ul class="list-group">
                <%for(let item of user.cart){%>
                    <li class="list-group-item fw-bold"><strong><%=item.name%></strong> - Rs <%=item.price%></li>
                <%}%>
                <li class="list-group-item fw-bold">Proceed to pay:  Rs <%=total%></li>
            </ul>
            <button class="btn btn-success mt-3">Buy</button>
        </div>
    </div>
    </section>


