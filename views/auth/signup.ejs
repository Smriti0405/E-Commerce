<% layout('layout/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mx-auto">
        <%- include('../partials/flash') %>
        <h1 class="mb-4 fw-normal">Sign Up</h1>
        <form action="/register" method="post" class="validated" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Usename" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-Mail</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="E-Mail" required>
            </div>
            <div class="mb-3">
                <p>Want to register as?</p>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="role" id="seller" value="seller">
                    <label class="form-check-label" for="seller">
                        Seller
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="role" id="buyer" value="buyer">
                    <label class="form-check-label" for="buyer">
                      Buyer
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">SignUp</button>
        </form>
    </div>
</div>
